<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.care2join">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterUserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartPageActivity" />
        </activity>

        <activity
            android:name=".BrowseActivity"
            android:label="@string/title_activity_browse"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartPageActivity" />
        </activity>

        <activity android:name=".PostDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BrowseActivity" />
        </activity>

        <activity android:name=".CreatePostActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BrowseActivity" />
        </activity>

    </application>

</manifest>